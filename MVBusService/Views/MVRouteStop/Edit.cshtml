@model MVBusService.Models.routeStop

@{
    ViewBag.Title = "Edit Stop for " + ViewBag.routeNumber + "-" + ViewBag.routeName;
}

<h2>Edit Stop for @ViewBag.routeNumber - @ViewBag.routeName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>routeStop</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.routeStopId)

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.busRouteCode)
                @Html.ValidationMessageFor(model => model.busRouteCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.busStopNumber, "busStopNumber", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("busStopNumber", String.Empty)
                @Html.ValidationMessageFor(model => model.busStopNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.offsetMinutes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.offsetMinutes)
                @Html.ValidationMessageFor(model => model.offsetMinutes)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
