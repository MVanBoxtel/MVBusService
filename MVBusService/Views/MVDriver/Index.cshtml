@model IEnumerable<MVBusService.Models.driver>

@{
    ViewBag.Title = Resources.MVTranslations.driverList;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(@Resources.MVTranslations.addDriver, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.homePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.workPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateHired)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.homePhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.workPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateHired)
        </td>
        <td>
            @Html.ActionLink(@Resources.MVTranslations.edit, "Edit", new { id=item.driverId }) |
            @Html.ActionLink(@Resources.MVTranslations.details, "Details", new { id=item.driverId }) |
            @Html.ActionLink(@Resources.MVTranslations.delete, "Delete", new { id=item.driverId })
        </td>
    </tr>
}

</table>
